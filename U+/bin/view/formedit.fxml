<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.ObservableList?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
	<padding>
		<Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
	</padding>
	<center>
		<GridPane hgap="10.0" vgap="10.0">
			<children>
				<Label text="재고번호 : " prefWidth="50" />
				<Label text="모 델 명 : " prefWidth="50" GridPane.rowIndex="1" />
				<Label text="수     량 : " prefWidth="50" GridPane.rowIndex="2" />
				<Label text="출 고 가 : " prefWidth="50" GridPane.rowIndex="3" />
				<Label text="제 조 사 : " prefWidth="50" GridPane.rowIndex="4" />
				<Label text="입 고 일 : " prefWidth="50" GridPane.rowIndex="5" />
				<!-- <Label text="이 미 지 : " prefWidth="50" GridPane.rowIndex="6" /> -->

				<TextField id="txtNum" prefWidth="100"
					GridPane.columnIndex="1" />
				<TextField id="txtModel" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField id="txtAmount" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<TextField id="txtPrice" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />
				<TextField id="txtCompany" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="4" />
				<DatePicker id="dpDate" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="5" />
			<!-- 	<TextField id="txtImage" prefWidth="100"
					GridPane.columnIndex="1" GridPane.rowIndex="6" /> -->
			</children>
		</GridPane>
	</center>
	<bottom>
		<HBox alignment="CENTER" spacing="20.0">
			<BorderPane.margin>
				<Insets top="20.0" bottom="10" />
			</BorderPane.margin>
			<children>
				<Button id="btnModify2" text="수 정" />
				<Button id="btnCancel" text="취 소" />
			</children>
		</HBox>
	</bottom>
</BorderPane>

