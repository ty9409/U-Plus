<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="control.SalesRegisterController" prefHeight="400"
	prefWidth="280">
	<VBox alignment="center">
		<padding>
			<Insets top="20" right="10" bottom="10" left="10" />
		</padding>
		<spacing>20</spacing>
		<children>
			<HBox alignment="center">
				<Label text="---------------- 판  매  등  록 ---------------" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="고  객  명 : " />
				<TextField fx:id="txtName" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="전화번호 : " />
				<spacing>2</spacing>
				<TextField fx:id="txtphone1" prefWidth="40" />
				<Label text="-" />
				<TextField fx:id="txtphone2" prefWidth="52" />
				<Label text="-" />
				<TextField fx:id="txtphone3" prefWidth="52" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="모  델  명 : " />
				<ComboBox fx:id="cbModel" promptText="기기목록" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="일련번호 : " />
				<TextField fx:id="txtSerial" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="요  금  제 : " />
				<TextField fx:id="txtPlan" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="할인약정 : " />
				<ComboBox fx:id="cbContract" promptText="약정선택"
					prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="인센티브 : " />
				<TextField fx:id="txtInct" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="판  매  자 : " />
				<ComboBox fx:id="cbName" promptText="직원목록" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="판매일자 : " />
				<DatePicker fx:id="dpDate" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets top="0" right="0" bottom="0" left="17" />
		</padding>
				<Label text="기타메모 : " />
				<TextField fx:id="txtMemo" prefWidth="170" prefHeight="40" />
			</HBox>
			<HBox alignment="center">
			<padding>
			<Insets left="10"/>
			</padding>
				<Label text="※판매정보는 수정이 불가하니 신중하게 입력하세요※" />
			</HBox>
			<HBox alignment="center">
				<padding>
					<Insets left="55" right="45" />
				</padding>
				<spacing>40</spacing>
				<Button fx:id="btnRegister" text="등  록" prefWidth="60" />
				<Button fx:id="btnCancel" text="취  소" prefWidth="60" />
			</HBox>
		</children>
	</VBox>
</AnchorPane>