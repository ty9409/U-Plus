<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="control.SalesModifyController" prefHeight="400"
	prefWidth="300">
	<VBox alignment="center">
		<padding>
			<Insets top="20" right="10" bottom="10" left="35" />
		</padding>
		<spacing>20</spacing>
		<children>
			<HBox alignment="center">
				<Label text="판    매    수    정" />
			</HBox>
			<HBox>
				<Label text="판매번호 : " />
				<TextField fx:id="txtNum" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="고 객  명 : " />
				<TextField fx:id="txtName" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="전화번호 : " />
				<TextField fx:id="txtPhone" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="모 델  명 : " />
				<ComboBox fx:id="cbModel" promptText="기기목록" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="일련번호 : " />
				<TextField fx:id="txtSerial" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="요  금  제 : " />
				<TextField fx:id="txtPlan" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="할인약정 : " />
				<ComboBox fx:id="cbContract" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="인센티브 : " />
				<TextField fx:id="txtInct" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="판 매  자 : " />
				<ComboBox fx:id="cbName" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="판매일자 : " />
				<DatePicker fx:id="dpDate" prefWidth="170" />
			</HBox>
			<HBox>
				<Label text="기타메모 : " />
				<TextField fx:id="txtMemo" prefWidth="170" prefHeight="40" />
			</HBox>
			<HBox>
				<padding>
					<Insets left="40" right="45" />
				</padding>
				<spacing>40</spacing>
				<Button fx:id="btnModify" text="수  정" prefWidth="60" />
				<Button fx:id="btnCancel" text="취  소" prefWidth="60" />
			</HBox>
		</children>
	</VBox>
</AnchorPane>