<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="control.StaffRegisterController" prefHeight="400"
	prefWidth="250">
	<VBox alignment="center">
		<padding>
			<Insets top="20" right="10" bottom="10" left="10" />
		</padding>
		<spacing>20</spacing>
		<children>
			<HBox alignment="center">
				<Label text="-------------- 직  원  등  록 -------------" />
			</HBox>
			<HBox alignment="center">
				<Label text="직      급 : " />
				<ComboBox fx:id="cbRank" promptText="직급목록" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<Label text="이      름 : " />
				<TextField fx:id="txtName" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<Label text="생년월일 : " />
				<DatePicker fx:id="dpBirth" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<Label text="전화번호 : " />
				<spacing>2</spacing>
				<TextField fx:id="txtphone1" prefWidth="40" />
				<Label text="-" />
				<TextField fx:id="txtphone2" prefWidth="52" />
				<Label text="-" />
				<TextField fx:id="txtphone3" prefWidth="52" />
			</HBox>
			<HBox alignment="center">
				<Label text="주      소 : " />
				<TextField fx:id="txtAddre" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<Label text="기  본  급 : " />
				<TextField fx:id="txtBasic" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<Label text="입  사  일 : " />
				<DatePicker fx:id="dpDate" prefWidth="170" />
			</HBox>
			<HBox alignment="center">
				<spacing>5</spacing>
				<Label text="이  미  지 : " />
				<TextField fx:id="txtImage" prefWidth="138" />
				<Button fx:id="btnImage" text="..." />
			</HBox>
			<HBox alignment="center">
				<padding>
					<Insets left="40" right="45" />
				</padding>
				<spacing>40</spacing>
				<Button fx:id="btnRegister" text="등  록" prefWidth="60" />
				<Button fx:id="btnCancel" text="취  소" prefWidth="60" />
			</HBox>
		</children>
	</VBox>
</AnchorPane>